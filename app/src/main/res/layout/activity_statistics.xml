<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jason.bloodGlucoseMonitoring.StatisticsActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dip"
        android:background="@color/colorPrimaryDark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_item_padding">

        <RelativeLayout
            android:id="@+id/llMeasuresCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewCountOfMeasurements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/count_of_measurements" />

            <TextView
                android:id="@+id/tvCountOfMeasurements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="0"
                android:textSize="21sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="@dimen/activity_item_padding"
            android:layout_marginTop="@dimen/activity_item_padding"
            android:background="@color/colorPrimary" />

    </LinearLayout>
</LinearLayout>