<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/svWelcomeScreen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvWelcomeScreenTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/welcome_screen_top_padding"
            android:text="@string/_TipText"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textSizeNormalXLarge" />

        <ImageView
            android:id="@+id/ivWelcomeScreenImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvWelcomeScreenTitle"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/title_image"
            android:paddingTop="@dimen/welcome_screen_top_padding"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/tvWelcomeScreenContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ivWelcomeScreenImage"
            android:paddingEnd="@dimen/welcome_screen_start_end_padding"
            android:paddingStart="@dimen/welcome_screen_start_end_padding"
            android:paddingTop="@dimen/welcome_screen_top_padding"
            android:paddingBottom="@dimen/welcome_screen_top_padding"
            android:text="@string/_TipText"
            android:textAlignment="center" />

    </RelativeLayout>

</ScrollView>
