<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jason.EveryGlic.CalculatorCarbsActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_action_bar"
        android:background="@color/colorPrimaryDark" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/activity_item_padding"
        android:padding="@dimen/activity_item_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewCarbsIn100GramsProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/etCarbsInProduct"
                    android:text="@string/carbohydrates_per_100g_product" />

                <EditText
                    android:id="@+id/etCarbsInProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:ems="7"
                    android:hint="@string/_0_100"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:selectAllOnFocus="true"
                    android:textAlignment="center" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewGramsOfProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/etGramsInProduct"
                    android:text="@string/grams_of_product" />

                <EditText
                    android:id="@+id/etGramsInProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:ems="7"
                    android:inputType="numberDecimal"
                    android:labelFor="@+id/etGramsInProduct"
                    android:maxLength="9"
                    android:selectAllOnFocus="true"
                    android:textAlignment="center" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/colorPrimary" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewCarbsInGramsOfProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/etCarbsInGramsOfProduct"
                    android:maxLines="2"
                    android:text="@string/carbs_in_grams_of_product" />

                <EditText
                    android:id="@+id/etCarbsInGramsOfProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:ems="7"
                    android:enabled="false"
                    android:focusable="false"
                    android:inputType="numberDecimal"
                    android:labelFor="@+id/etCarbsInGramsOfProduct"
                    android:maxLength="9"
                    android:selectAllOnFocus="true"
                    android:textAlignment="center" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlAoBU"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewAmountBreadUnits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/etAmountBreadUnits"
                    android:maxLines="2"
                    android:text="@string/amount_of_bread_units" />

                <EditText
                    android:id="@+id/etAmountBreadUnits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:ems="7"
                    android:hint="@string/_0_99_9"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:selectAllOnFocus="true"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/tvCarbsInBreadUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignStart="@+id/etAmountBreadUnits"
                    android:layout_below="@+id/etAmountBreadUnits"
                    android:textAlignment="center"
                    android:textSize="@dimen/textSizeCaption" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="@dimen/activity_item_padding"
                    android:layout_marginRight="@dimen/activity_item_padding"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tvStack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/view1"
                    android:layout_toStartOf="@+id/tvStackSum"
                    android:paddingBottom="7dp"
                    android:paddingRight="@dimen/activity_item_padding"
                    android:paddingTop="7dp"
                    android:text="Empty"
                    android:textAlignment="textStart" />

                <TextView
                    android:id="@+id/tvStackSum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/view1"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:text="0.0"
                    android:textAlignment="textStart" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/tvStack"
                    android:layout_marginLeft="@dimen/activity_item_padding"
                    android:layout_marginRight="@dimen/activity_item_padding"
                    android:background="@color/colorPrimary" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <!--android:layout_alignStart="@+id/etAmountBreadUnits"-->
    <!--android:layout_below="@+id/etAmountBreadUnits"-->
    <View
        android:id="@+id/viewBtn1"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_above="@id/btnClearStack"
        android:layout_alignEnd="@id/btnClearStack"
        android:layout_alignStart="@id/btnClearStack"
        android:layout_marginLeft="@dimen/activity_item_padding"
        android:layout_marginRight="@dimen/activity_item_padding"
        android:background="@color/colorPrimary" />

    <Button
        android:id="@+id/btnClearStack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scrollView1"
        android:text="Clear" />

    <View
        android:id="@+id/viewBtn2"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_above="@id/btnDeleteLastInStack"
        android:layout_alignEnd="@id/btnDeleteLastInStack"
        android:layout_alignStart="@id/btnDeleteLastInStack"
        android:layout_marginLeft="@dimen/activity_item_padding"
        android:layout_marginRight="@dimen/activity_item_padding"
        android:background="@color/colorPrimary" />

    <Button
        android:id="@+id/btnDeleteLastInStack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scrollView1"
        android:layout_toEndOf="@+id/btnClearStack"
        android:text="Delete last" />

    <View
        android:id="@+id/viewBtn3"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_above="@id/btnAddToStack"
        android:layout_alignEnd="@id/btnAddToStack"
        android:layout_alignStart="@id/btnAddToStack"
        android:layout_marginLeft="@dimen/activity_item_padding"
        android:layout_marginRight="@dimen/activity_item_padding"
        android:background="@color/colorPrimary" />

    <Button
        android:id="@+id/btnAddToStack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnDeleteLastInStack"
        android:layout_alignBottom="@+id/btnDeleteLastInStack"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/btnDeleteLastInStack"
        android:text="Add" />

</RelativeLayout>