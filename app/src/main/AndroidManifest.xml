<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jason.bloodGlucoseMonitoring">

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="false"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/my_backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:logo="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "http://www.example.com/gizmos” -->
                <data android:scheme="http"
                    android:host="www.example.com"
                    android:pathPrefix="/jason" />
                <!-- note that the leading "/" is required for pathPrefix-->
                <!-- Accepts URIs that begin with "example://jason” -->
                <data android:scheme="example"
                    android:host="jason" />


            </intent-filter>
        </activity>

        <activity
            android:name=".PreferencesActivity"
            android:label="@string/preferences"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AgreementActivity"
            android:label="@string/agreement"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AboutActivity"
            android:label="@string/about"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.DayNight.Dialog" />
        <activity
            android:name=".CalculatorCarbsActivity"
            android:label="@string/calculator_of_carbs"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddMeasurementActivity"
            android:label="@string/add_measurement"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MeasurementsActivity"
            android:label="@string/measurements"
            android:screenOrientation="portrait" />
        <activity
            android:name=".StatisticsActivity"
            android:label="@string/statistics"
            android:screenOrientation="portrait" />
        <activity
            android:name=".InfoActivity"
            android:label="@string/information"
            android:screenOrientation="portrait" />
    </application>

</manifest> <!-- //request to allocate more memory    android:largeHeap="true" -->
