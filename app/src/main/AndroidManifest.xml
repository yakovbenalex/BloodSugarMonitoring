<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.opalevapps.EveryGlic"
    android:installLocation="auto"
    android:versionCode="4"
    android:versionName="0.04">

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="false"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/my_backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:logo="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="ru.opalevapps.EveryGlic.ui.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.opalevapps.EveryGlic.ui.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.opalevapps.EveryGlic.ui.PreferencesActivity"
            android:label="@string/preferences"
            android:parentActivityName="ru.opalevapps.EveryGlic.ui.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="ru.opalevapps.EveryGlic.ui.AgreementActivity"
            android:label="@string/agreement"
            android:parentActivityName="ru.opalevapps.EveryGlic.ui.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="ru.opalevapps.EveryGlic.ui.CalculatorCarbsActivity"
            android:label="@string/calculator_of_carbs"
            android:parentActivityName="ru.opalevapps.EveryGlic.ui.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="ru.opalevapps.EveryGlic.ui.AddOrChangeMeasurementActivity"
            android:label="@string/add_measurement"
            android:parentActivityName="ru.opalevapps.EveryGlic.ui.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="ru.opalevapps.EveryGlic.ui.MeasurementsActivity"
            android:label="@string/measurements"
            android:parentActivityName="ru.opalevapps.EveryGlic.ui.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="ru.opalevapps.EveryGlic.ui.StatisticsActivity"
            android:label="@string/statistics"
            android:parentActivityName="ru.opalevapps.EveryGlic.ui.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="ru.opalevapps.EveryGlic.ui.InfoActivity"
            android:label="@string/helpful"
            android:parentActivityName="ru.opalevapps.EveryGlic.ui.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="ru.opalevapps.EveryGlic.ui.WelcomeScreenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="ru.opalevapps.EveryGlic.ui.AboutActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog"
            android:label="@string/title_activity_about" />
    </application>

</manifest>
